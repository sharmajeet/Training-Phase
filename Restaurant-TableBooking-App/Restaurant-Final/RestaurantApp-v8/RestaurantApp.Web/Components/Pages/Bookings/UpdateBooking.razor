@page "/booking/update/{Id:int}"

<p class="text-center text-primary shadow-lg p-2 mb-2 bg-light-subtle rounded fs-1"
   style="font-family: 'Arial, sans-serif'; font-weight: bold; letter-spacing: 1px;">
    Edit The Booking Data
</p>

<div class="container mt-4">
    <div class="d-flex justify-content-end">
        @* <button class="btn btn-primary mb-3" type="submit" @onclick="Submit">Create</button> *@
    </div>

    <div class="card shadow-lg">
        <div class="card-body">
            <EditForm Model="Model" OnValidSubmit="Submit">
                <div class="row">

                    <!-- Table Selection -->
                    <div class="col-md-6">
                        <div class="form-group">
                            <label for="tableId" class="form-label">Table Id</label>
                            <InputSelect class="form-control" @bind-Value="Model.TableId" id="tableId">
                                <option value="">-- Select Table --</option>
                                @foreach (var table in TableModels)
                                {
                                    <option value="@table.Id">@table.TableType (@table.Id)</option>
                                }
                            </InputSelect>
                            <ValidationMessage For="() => Model.TableId" />
                        </div>
                    </div>

                    <!-- Customer Name -->
                    <div class="col-md-6">
                        <div class="form-group">
                            <label for="customerName" class="form-label">Customer Name</label>
                            <InputText class="form-control" @bind-Value="Model.CustomerName" id="customerName" />
                            <ValidationMessage For="() => Model.CustomerName" />
                        </div>
                    </div>

                    <!-- Contact Number -->
                    <div class="col-md-6">
                        <div class="form-group">
                            <label for="contactNumber" class="form-label">Contact Number</label>
                            <InputText class="form-control" @bind-Value="Model.CustomerPhone" id="contactNumber" />
                            <ValidationMessage For="() => Model.CustomerPhone" />
                        </div>
                    </div>

                    <!-- Date -->
                    <div class="col-md-6">
                        <div class="form-group">
                            <label for="date" class="form-label">Date</label>
                            <InputDate class="form-control" @bind-Value="Model.BookingDate" id="date" />
                            <ValidationMessage For="() => Model.BookingDate" />
                        </div>
                    </div>

                    @* <!-- Time Slot --> *@
                    @* <div class="col-md-6"> *@
                    @*     <div class="form-group"> *@
                    @*         <label for="time" class="form-label">Time-Slot</label> *@
                    @*         <InputSelect class="form-control" @bind-Value="Model.TimeFrom" id="time"> *@
                    @*             <option value="">-- Select Time --</option> *@
                    @*             <option value="Morning">Morning</option> *@
                    @*             <option value="Afternoon">Afternoon</option> *@
                    @*             <option value="Evening">Evening</option> *@
                    @*             <option value="Night">Night</option> *@
                    @*         </InputSelect> *@
                    @*         <ValidationMessage For="() => Model.TimeFrom" /> *@
                    @*     </div> *@
                    @* </div> *@

                    

                </div>
                <!-- Full Width Save Button -->
                <div class="d-flex justify-content-between mt-4">
                    <button class="btn btn-secondary ms-2 w-25" @onclick="cancelClick" type="button">Cancel</button>
                    <button class="btn btn-success me-2 w-25" type="submit">Save</button>
                </div>
            </EditForm>
        </div>
    </div>
</div>
